<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <LinearLayout
        android:id="@+id/ll1"
        android:padding="@dimen/_10sdp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



        <com.google.android.material.card.MaterialCardView
            android:layout_marginRight="@dimen/_14sdp"
            app:cardCornerRadius="@dimen/_18sdp"
            app:cardBackgroundColor="@color/primary_extra_light"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_45sdp">


            <ImageView
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_gravity="center"
                android:id="@+id/civProfile"
                android:background="@drawable/pending_img"/>



        </com.google.android.material.card.MaterialCardView>





        <LinearLayout
            android:layout_gravity="center"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tvTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pending..."
                    android:textSize="@dimen/_12sdp"
                    android:fontFamily="@font/poppins_semibold"
                    android:textColor="@color/primary"
                    />


                <ImageView
                    android:visibility="gone"
                    android:layout_marginLeft="@dimen/_4sdp"
                    android:layout_gravity="center"
                    android:id="@+id/ivVerify"
                    android:layout_width="@dimen/_16sdp"
                    android:layout_height="@dimen/_16sdp"
                    android:background="@drawable/verify_ic"
                    android:backgroundTint="@color/primary"
                    />


            </LinearLayout>


            <TextView
                android:id="@+id/tvMessage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="24.09.2024 | 11:30 AM"
                android:textSize="@dimen/_10sdp"
                android:fontFamily="@font/poppins_medium"
                android:textColor="?attr/myTextColor"
                />





        </LinearLayout>

        <TextView
            android:gravity="right"
            android:layout_gravity="center"
            android:id="@+id/tvPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="â‚¹50.00"
            android:textSize="@dimen/_14sdp"
            android:fontFamily="@font/poppins_bold"
            android:textColor="@color/primary"
            />

    </LinearLayout>

    <com.google.android.material.divider.MaterialDivider
        android:layout_below="@+id/ll1"
        android:layout_marginTop="@dimen/_4sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:dividerColor="@color/grey"
        app:dividerThickness="@dimen/_1sdp"
        />


</RelativeLayout>