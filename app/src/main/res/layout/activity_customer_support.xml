<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.CustomerSupportActivity">


    <RelativeLayout
        android:id="@+id/rlToolbar"
        android:padding="@dimen/_20sdp"
        android:background="@color/titleBG"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:backgroundTint="?attr/iconColor"
            android:layout_centerVertical="true"
            android:id="@+id/ivBack"
            android:layout_width="@dimen/_24sdp"
            android:layout_height="@dimen/_18sdp"
            android:background="@drawable/arrow_left"
            />

        <TextView
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/_14sdp"
            android:layout_toRightOf="@+id/ivBack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Customer Support"
            android:textSize="@dimen/_14sdp"
            android:textColor="?attr/myTextColor"
            android:fontFamily="@font/poppins_medium"
            />


    </RelativeLayout>


    <androidx.core.widget.NestedScrollView
        android:layout_below="@+id/rlToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/contact_support"
                android:adjustViewBounds="true"
                android:layout_marginVertical="@dimen/_10sdp"
                android:layout_marginHorizontal="@dimen/_40sdp"/>

            <TextView
                android:layout_marginTop="@dimen/_40sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:textAlignment="center"
                android:text="We are here to support you, Please use below social media links to find faster resolution for your queries"
                android:textColor="?attr/myTextColor"
                android:textSize="@dimen/_8sdp"
                android:fontFamily="@font/poppins_regular"
                />


            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardUseCompatPadding="true"
                android:elevation="10dp"
                app:cardElevation="@dimen/_10sdp"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                app:cardCornerRadius="@dimen/_15sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/rlTelegramLinkJoin"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:cardUseCompatPadding="true"
                        app:cardBackgroundColor="#EBF2FF"
                        app:cardCornerRadius="@dimen/_15sdp">

                        <LinearLayout
                            android:padding="@dimen/_10sdp"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:layout_marginBottom="@dimen/_5sdp"
                                android:src="@drawable/telegram_logo_ic"
                                android:layout_width="@dimen/_30sdp"
                                android:layout_height="@dimen/_30sdp"/>

                            <TextView
                                android:layout_centerVertical="true"
                                android:textAlignment="center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Join Telegram Group"
                                android:textSize="@dimen/_7sdp"
                                android:textColor="?attr/myTextColor"
                                android:fontFamily="@font/poppins_medium"/>
                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/rlInstagramLinkJoin"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:cardUseCompatPadding="true"
                        app:cardBackgroundColor="#FFECEB"
                        app:cardCornerRadius="@dimen/_15sdp">

                        <LinearLayout
                            android:padding="@dimen/_10sdp"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:layout_marginBottom="@dimen/_5sdp"
                                android:src="@drawable/instagram_logo"
                                android:layout_width="@dimen/_30sdp"
                                android:layout_height="@dimen/_30sdp"/>

                            <TextView
                                android:layout_centerVertical="true"
                                android:textAlignment="center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Visit Instagram Page"
                                android:textSize="@dimen/_7sdp"
                                android:textColor="?attr/myTextColor"
                                android:fontFamily="@font/poppins_medium"/>
                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/btnchatsupport"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        app:cardUseCompatPadding="true"
                        app:cardBackgroundColor="#E6FFF4"
                        app:cardCornerRadius="@dimen/_15sdp">

                        <LinearLayout
                            android:padding="@dimen/_10sdp"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:layout_marginBottom="@dimen/_5sdp"
                                android:src="@drawable/massage_icon"
                                android:layout_width="@dimen/_30sdp"
                                android:layout_height="@dimen/_30sdp"/>

                            <TextView
                                android:layout_centerVertical="true"
                                android:layout_centerHorizontal="true"
                                android:textAlignment="center"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Chat Now"
                                android:textSize="@dimen/_7sdp"
                                android:textColor="?attr/myTextColor"
                                android:fontFamily="@font/poppins_medium"/>
                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>

                </LinearLayout>



