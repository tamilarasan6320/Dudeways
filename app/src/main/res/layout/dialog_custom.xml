<!-- res/layout/dialog_custom.xml -->
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="@dimen/_10sdp"
    >

    <LinearLayout
        android:padding="@dimen/_10sdp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



    <TextView
        android:layout_gravity="center"
        android:id="@+id/dialog_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="@dimen/_12sdp"
        android:textColor="?attr/myTextColor"
        android:fontFamily="@font/poppins_semibold" />




    <LinearLayout
        android:weightSum="2"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.card.MaterialCardView
            app:cardCornerRadius="@dimen/_10sdp"
            android:layout_weight="1"
            app:cardBackgroundColor="@color/primary"
            app:cardUseCompatPadding="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <LinearLayout
                android:id="@+id/btnPurchase"
                android:padding="@dimen/_4sdp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <ImageView
                    android:layout_gravity="center"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:background="@drawable/purchase"
                    android:backgroundTint="@color/primary_extra_light"
                    />


            <TextView
                android:layout_marginLeft="@dimen/_4sdp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Purchase Points"
                android:textAlignment="textStart"
                android:fontFamily="@font/poppins_bold"
                android:textSize="@dimen/_12sdp"
                android:textColor="@color/white"
                />

            </LinearLayout>


        </com.google.android.material.card.MaterialCardView>
        <Space
            android:layout_width="@dimen/_5sdp"
            android:layout_height="wrap_content"/>
        <com.google.android.material.card.MaterialCardView
            app:cardCornerRadius="@dimen/_10sdp"
            android:layout_weight="1"
            app:cardBackgroundColor="@color/blue"
            app:cardUseCompatPadding="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <LinearLayout
                android:id="@+id/btnFreePoints"
                android:padding="@dimen/_4sdp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <ImageView
                    android:layout_gravity="center"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:background="@drawable/free"
                    android:backgroundTint="@color/primary_extra_light"
                    />


                <TextView
                    android:layout_marginLeft="@dimen/_4sdp"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Free \nPoints"
                    android:textAlignment="textStart"
                    android:fontFamily="@font/poppins_bold"
                    android:textSize="@dimen/_12sdp"
                    android:textColor="@color/white"
                    />

            </LinearLayout>


        </com.google.android.material.card.MaterialCardView>


    </LinearLayout>


        <TextView
            android:id="@+id/tv_min_points"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Minimum 10 points required to chat"
            android:layout_gravity="center"
            android:textSize="@dimen/_10sdp"
            android:fontFamily="@font/poppins_regular"
            />
        <TextView
            android:id="@+id/tv_how_points"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Spend 10 points for a one-hour conversation with a user"
            android:layout_gravity="center"
            android:textSize="@dimen/_12sdp"
            android:gravity="center"
            android:fontFamily="@font/poppins_regular"
            android:textColor="@color/primary"
            />



    </LinearLayout>




</com.google.android.material.card.MaterialCardView>
