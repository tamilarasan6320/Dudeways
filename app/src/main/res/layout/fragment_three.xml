<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Activity.Trip.Fragment.threeFragment">

    <LinearLayout
        android:layout_marginTop="@dimen/_20sdp"
        android:orientation="vertical"
        android:padding="@dimen/_10sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:layout_marginBottom="@dimen/_10sdp">



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Where are you going"
                android:textSize="@dimen/_12sdp"
                android:fontFamily="@font/poppins_bold"
                android:textColor="?attr/myTextColor"
                android:layout_gravity="start"
                android:layout_marginVertical="@dimen/_10sdp"
                />

            <!-- Progress Text -->
            <TextView
                android:id="@+id/tvProgressText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2/5"
                android:layout_gravity="start"
                android:textSize="@dimen/_12sdp"
                android:fontFamily="@font/poppins_medium"
                android:textColor="@color/text_grey_light"
                android:layout_marginEnd="@dimen/_8sdp"/>

            <!-- Horizontal ProgressBar -->
            <ProgressBar
                android:id="@+id/progressBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="@dimen/_4sdp"
                android:max="5"
                android:progress="2"
                android:progressDrawable="@drawable/progress_gradient"
                android:indeterminateOnly="false"
                android:progressTintMode="src_in" />

        </LinearLayout>






        <TextView
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="[Kodaikanal,Ooty,Manali,Munnar, Bangalore etc..]"
            android:textSize="@dimen/_12sdp"
            android:fontFamily="@font/poppins_regular"
            android:textColor="?attr/myTextColor"
            />


        <EditText
            android:id="@+id/etLocation"
            android:layout_marginTop="@dimen/_12sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_text1"
            android:hint="Location"
            android:fontFamily="@font/poppins_medium"
            android:padding="@dimen/_10sdp"
            android:textCursorDrawable="@drawable/color_cursor"
            android:maxLength="20"
            android:maxLines="1"
            android:singleLine="true"
            android:inputType="text"
            />


    </LinearLayout>

</FrameLayout>