<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <LinearLayout
        android:padding="@dimen/_10sdp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/ivProfile"
            android:layout_marginRight="@dimen/_14sdp"
            android:layout_gravity="center"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            app:civ_border_width="2dp"
            app:civ_border_color="@color/primary"
            />



        <RelativeLayout
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tvName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Glancy"
                    android:textSize="@dimen/_14sdp"
                    android:fontFamily="@font/poppins_regular"
                    android:textColor="@color/black"
                    />

                <TextView
                    android:id="@+id/tvLatestseen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Last seen 04:03 PM"
                    android:textSize="@dimen/_10sdp"
                    android:fontFamily="@font/poppins_regular"
                    android:textColor="@color/black"
                    />


            </LinearLayout>






            <RelativeLayout
                android:layout_alignParentRight="true"
                android:background="@drawable/corners_bg"
                android:backgroundTint="@color/primary"
               android:paddingHorizontal="@dimen/_10sdp"
                android:paddingVertical="@dimen/_8sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">


                <ImageView
                    android:id="@+id/ivChat"
                    android:layout_centerVertical="true"
                    android:layout_width="@dimen/_14sdp"
                    android:layout_height="@dimen/_14sdp"
                    android:background="@drawable/chat_ic"
                    android:layout_marginRight="@dimen/_10sdp"
                    />


                <TextView
                    android:layout_toRightOf="@+id/ivChat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Chat"
                    android:layout_centerInParent="true"
                    android:textSize="@dimen/_10sdp"
                    android:fontFamily="@font/poppins_medium"
                    android:textColor="@color/white"
                    />

            </RelativeLayout>








        </RelativeLayout>



    </LinearLayout>


    <com.google.android.material.divider.MaterialDivider
        android:layout_alignParentBottom="true"
        android:layout_marginTop="@dimen/_4sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:dividerColor="@color/primary_extra_light"
        app:dividerThickness="@dimen/_2sdp"
        />

</RelativeLayout>