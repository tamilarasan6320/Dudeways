<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <androidx.core.widget.NestedScrollView
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/_10sdp">



        <TextView
            android:id="@+id/tvSplashText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_semibold"
            android:text="Personal Details"
            android:textColor="@color/black"
            android:textSize="@dimen/_24sdp" />


        <EditText
            android:id="@+id/etName"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_text1"
            android:hint="Name"
            android:fontFamily="@font/poppins_medium"
            android:padding="@dimen/_10sdp"
            android:inputType="textEmailAddress"
            android:textCursorDrawable="@drawable/color_cursor"
            android:maxLength="15"
            />




        <EditText
            android:id="@+id/etEmail"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_text1"
            android:hint="E-mail id"
            android:fontFamily="@font/poppins_medium"
            android:padding="@dimen/_10sdp"
            android:inputType="textEmailAddress"
            android:textCursorDrawable="@drawable/color_cursor"
            />

        <EditText
            android:visibility="gone"
            android:id="@+id/etMobileNumber"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_text1"
            android:hint="Mobile Number"
            android:fontFamily="@font/poppins_medium"
            android:padding="@dimen/_10sdp"
            android:inputType="number"
            android:maxLength="10"
            android:textCursorDrawable="@drawable/color_cursor"
            />


        <EditText
            android:id="@+id/etGender"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_text1"
            android:hint="Gender"
            android:fontFamily="@font/poppins_medium"
            android:padding="@dimen/_10sdp"
            android:textCursorDrawable="@drawable/color_cursor"
            android:editable="false"
            android:focusableInTouchMode="true"
            android:cursorVisible="false"
            android:focusable="false"
            />


        <EditText
            android:id="@+id/etProfession"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_text1"
            android:hint="Profession"
            android:fontFamily="@font/poppins_medium"
            android:padding="@dimen/_10sdp"
            android:textCursorDrawable="@drawable/color_cursor"
            android:drawableEnd="@drawable/down_arrow"
            android:drawableTint="@color/primary"
            android:editable="false"
            android:focusableInTouchMode="true"
            android:cursorVisible="false"
            android:focusable="false"
            />


        <com.google.android.material.card.MaterialCardView
            app:cardCornerRadius="@dimen/_10sdp"
            android:visibility="gone"
            android:id="@+id/cardProfession"
            android:padding="@dimen/_1sdp"
            android:layout_marginTop="@dimen/_4sdp"
            app:cardBackgroundColor="@color/primary_light"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.core.widget.NestedScrollView
                android:scrollbarThumbVertical="@drawable/custom_scrollbar"
                android:scrollbars="vertical"
                android:scrollbarSize="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_180sdp">


                <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvProfession"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

            </androidx.core.widget.NestedScrollView>

        </com.google.android.material.card.MaterialCardView>


        <EditText
            android:id="@+id/etRefferCode"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_text1"
            android:hint="Reffer code (optional)"
            android:fontFamily="@font/poppins_medium"
            android:padding="@dimen/_10sdp"
            android:textCursorDrawable="@drawable/color_cursor"
            />







        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSave"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="@dimen/_24sdp"
            android:fontFamily="@font/poppins_medium"
            app:backgroundTint="@null"
            android:background="@drawable/gradient_button"
            android:text="Save"
            android:textAllCaps="false"
            android:textSize="@dimen/_14sdp" />

    </LinearLayout>



    </androidx.core.widget.NestedScrollView>

</RelativeLayout>