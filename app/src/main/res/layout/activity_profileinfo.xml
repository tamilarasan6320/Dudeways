<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.ProfileViewActivity">

    <RelativeLayout
        android:id="@+id/rlToolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_160sdp">


        <RelativeLayout
            android:id="@+id/rl1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <ImageView
                android:id="@+id/ivCover"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_120sdp"
                android:scaleType="fitXY"
                />


            <ImageButton
            android:backgroundTint="@color/black"
                android:id="@+id/ivBack"
                android:layout_margin="@dimen/_10sdp"
                android:layout_width="@dimen/_24sdp"
                android:layout_height="@dimen/_18sdp"
                android:background="@drawable/arrow_left"
                />




        </RelativeLayout>




        <RelativeLayout
            android:id="@+id/rlProfile"
            android:layout_alignParentBottom="true"
            android:layout_width="@dimen/_70sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/civProfile"
                android:layout_width="@dimen/_70sdp"
                android:layout_height="@dimen/_70sdp"
                app:civ_border_width="2dp"
                app:civ_border_color="@color/primary"
                />



        </RelativeLayout>











    </RelativeLayout>



    <LinearLayout
        android:id="@+id/llProfileDetails"
        android:orientation="vertical"
        android:padding="@dimen/_10sdp"
        android:layout_below="@+id/rlToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



        <LinearLayout
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_gravity="center"
                android:gravity="center"
                android:id="@+id/tvName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="@dimen/_14sdp"
                android:fontFamily="@font/poppins_semibold"
                android:textColor="?attr/myTextColor"
                />


            <LinearLayout
                android:id="@+id/ivGenderColor"
                android:gravity="center"
                android:paddingVertical="@dimen/_2sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:paddingHorizontal="@dimen/_8sdp"
                android:orientation="horizontal"
                android:backgroundTint="@color/blue_200"
                android:background="@drawable/corners_bg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/ivGender"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_width="@dimen/_8sdp"
                    android:layout_height="@dimen/_8sdp"
                    android:backgroundTint="@color/white"
                    />

                <TextView
                    android:id="@+id/ivAge"
                    android:gravity="center"
                    android:paddingTop="@dimen/_2sdp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/_4sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="@dimen/_8sdp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/poppins_regular"
                    />

            </LinearLayout>


        </LinearLayout>





        <TextView
            android:layout_marginTop="@dimen/_4sdp"
            android:id="@+id/tvUsername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="@dimen/_12sdp"
            android:fontFamily="@font/poppins_medium"
            android:textColor="?attr/textgrey"
            />





        <TextView
            android:id="@+id/tvPlace"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="@dimen/_10sdp"
            android:fontFamily="@font/poppins_regular"
            android:textColor="?attr/textgrey"
            />







        <LinearLayout
            android:paddingTop="@dimen/_10sdp"
            android:weightSum="2"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <LinearLayout
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Profession"
                    android:textSize="@dimen/_12sdp"
                    android:fontFamily="@font/poppins_semibold"
                    android:textColor="?attr/myTextColor"
                    />

                <TextView
                    android:id="@+id/tvProfessional"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="@dimen/_10sdp"
                    android:fontFamily="@font/poppins_regular"
                    android:textColor="?attr/textgrey"
                    />


            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Gender"
                    android:textSize="@dimen/_12sdp"
                    android:fontFamily="@font/poppins_semibold"
                    android:textColor="?attr/myTextColor"
                    />

                <TextView
                    android:id="@+id/tvGender"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="@dimen/_10sdp"
                    android:fontFamily="@font/poppins_regular"
                    android:textColor="?attr/textgrey"
                    />


            </LinearLayout>



        </LinearLayout>
        <LinearLayout
            android:paddingTop="@dimen/_10sdp"
            android:weightSum="2"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <LinearLayout
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="City"
                    android:textSize="@dimen/_12sdp"
                    android:fontFamily="@font/poppins_semibold"
                    android:textColor="?attr/myTextColor"
                    />

                <TextView
                    android:id="@+id/tvCity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="@dimen/_10sdp"
                    android:fontFamily="@font/poppins_regular"
                    android:textColor="?attr/textgrey"
                    />


            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="State"
                    android:textSize="@dimen/_12sdp"
                    android:fontFamily="@font/poppins_semibold"
                    android:textColor="?attr/myTextColor"
                    />

                <TextView
                    android:id="@+id/tvState"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="@dimen/_10sdp"
                    android:fontFamily="@font/poppins_regular"
                    android:textColor="?attr/textgrey"
                    />


            </LinearLayout>



        </LinearLayout>


    </LinearLayout>













    <LinearLayout
        android:layout_alignParentBottom="true"
        android:layout_marginTop="@dimen/_10sdp"
        android:weightSum="2"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/rlAddFriend"
            android:background="@drawable/bg_coner"
            android:layout_weight="1"
            android:padding="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <ImageView
                android:backgroundTint="@color/black"
                android:id="@+id/ivaddFriend"
                android:layout_centerVertical="true"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:background="@drawable/add_account"
                />

            <TextView
                android:id="@+id/tvAddFriend"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Add to Friend"
                android:textColor="@color/black"
                android:textSize="@dimen/_10sdp"
                android:fontFamily="@font/poppins_medium"
                />

        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rlChat"
            android:background="@color/primary"
            android:layout_weight="1"
            android:padding="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <ImageView
                android:layout_centerVertical="true"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_18sdp"
                android:background="@drawable/chat_ic"
                />

            <TextView
                android:layout_centerVertical="true"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Start Chat"
                android:textColor="@color/white"
                android:textSize="@dimen/_10sdp"
                android:fontFamily="@font/poppins_medium"
                />

        </RelativeLayout>


    </LinearLayout>






</RelativeLayout>