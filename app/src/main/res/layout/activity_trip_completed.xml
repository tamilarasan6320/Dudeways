<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.Trip.TripCompletedActivity">



    <LinearLayout
        android:layout_centerInParent="true"
        android:padding="@dimen/_10sdp"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



        <ImageView
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:background="@drawable/verfy_ic"
            android:backgroundTint="@color/green"
            />


        <TextView
            android:layout_marginTop="@dimen/_10sdp"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Trip uploaded successfully. Please wait for the review, which will be completed within 24 hours."
            android:textColor="@color/black"
            android:textSize="@dimen/_14sdp"
            />


        <com.google.android.material.button.MaterialButton
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_alignParentBottom="true"
            android:id="@+id/btnMytrip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_medium"
            android:paddingVertical="@dimen/_8sdp"
            app:backgroundTint="@null"
            android:backgroundTint="@color/primary_extra_light"
            android:text="View My Trip"
            app:strokeColor="@color/primary"
            app:strokeWidth="2dp"
            android:textAllCaps="false"
            android:textSize="@dimen/_14sdp"
            android:textColor="@color/black"
            />

    </LinearLayout>






</RelativeLayout>