<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardUseCompatPadding="true"
    android:elevation="10dp"
    app:cardElevation="@dimen/_10sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="@dimen/_15sdp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_10sdp"
        >

        <LinearLayout
            android:padding="@dimen/_8sdp"
            android:visibility="gone"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_marginRight="@dimen/_5sdp"
                android:id="@+id/ivProfile"
                android:layout_gravity="center"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"/>

            <TextView
                android:id="@+id/tvName"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_semibold"
                android:text="Shafeeka"
                android:textColor="?attr/myTextColor"
                android:textSize="@dimen/_14sdp" />

            <ImageView
                android:visibility="gone"
                android:id="@+id/ivVerify"
                android:layout_marginHorizontal="@dimen/_2sdp"
                android:layout_gravity="center"
                android:layout_width="@dimen/_16sdp"
                android:layout_height="@dimen/_16sdp"
                android:background="@drawable/verify_ic"
                android:backgroundTint="@color/primary"
                />


            <TextView
                android:visibility="gone"
                android:id="@+id/tvUsername"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_regular"
                android:text=""
                android:textColor="?attr/textgrey"
                android:textSize="@dimen/_14sdp" />

            <!--            <TextView-->
            <!--                android:layout_marginLeft="@dimen/_10sdp"-->
            <!--                android:layout_gravity="center"-->
            <!--                android:layout_width="wrap_content"-->
            <!--                android:layout_height="wrap_content"-->
            <!--                android:fontFamily="@font/poppins_regular"-->
            <!--                android:text="\u00B7 4h"-->
            <!--                android:textColor="?attr/textgrey"-->
            <!--                android:textSize="@dimen/_14sdp" />-->




            <LinearLayout
                android:gravity="end"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >


                <ImageButton
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:background="@drawable/delete_ic"
                    android:layout_gravity="center"
                    android:backgroundTint="@color/red"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Delete"
                    android:textSize="@dimen/_10sdp"
                    android:layout_gravity="center"
                    android:fontFamily="@font/poppins_medium"
                    android:textColor="@color/red"
                    android:layout_marginLeft="@dimen/_2sdp"
                    />



            </LinearLayout>





        </LinearLayout>

        <!--        <com.google.android.material.divider.MaterialDivider-->
        <!--            android:layout_width="match_parent"-->
        <!--            android:layout_height="wrap_content"/>-->

        <ImageView
            android:id="@+id/ivProfileImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:paddingBottom="@dimen/_10sdp"
            />

        <LinearLayout
            android:gravity="start"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvLocation"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:text="Munnar Kerala"
                android:textColor="?attr/textgrey"
                android:textSize="@dimen/_10sdp"
                android:fontFamily="@font/poppins_medium"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:maxLines="2"
                android:ellipsize="end"
                android:singleLine="false"
                />


            <RelativeLayout
                android:id="@+id/rlStatus"
                android:background="@drawable/rounded_km_bg"
                android:padding="@dimen/_3sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/icLocation"
                    android:backgroundTint="@color/primary"
                    android:layout_width="@dimen/_15sdp"
                    android:layout_height="@dimen/_15sdp"
                    android:background="@drawable/location_ic"
                    />

                <TextView
                    android:layout_toRightOf="@id/icLocation"
                    android:layout_alignBaseline="@id/icLocation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="233 km"
                    android:textColor="@color/primary"
                    android:textSize="@dimen/_8sdp"
                    android:fontFamily="@font/poppins_semibold"
                    android:layout_centerInParent="true"
                    />


            </RelativeLayout>

        </LinearLayout>




        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">



            <TextView
                android:id="@+id/tvTitle"
                android:layout_toLeftOf="@+id/ivShare"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Trip to Kerala, looking for travel partner"
                android:textColor="?attr/myTextColor"
                android:textSize="@dimen/_12sdp"
                android:fontFamily="@font/poppins_bold"
                />


            <ImageView
                android:backgroundTint="?attr/iconColor"
                android:visibility="gone"
                android:layout_centerVertical="true"
                android:id="@+id/ivShare"
                android:layout_alignParentRight="true"
                android:layout_width="@dimen/_14sdp"
                android:layout_height="@dimen/_14sdp"
                android:background="@drawable/share_ic"
                />



        </RelativeLayout>



        <LinearLayout
            android:paddingVertical="@dimen/_2sdp"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


            <ImageView
                android:backgroundTint="?attr/iconColor"
                android:layout_gravity="center"
                android:layout_width="@dimen/_14sdp"
                android:layout_height="@dimen/_14sdp"
                android:background="@drawable/date_ic"
                />


            <TextView
                android:layout_marginLeft="@dimen/_4sdp"
                android:id="@+id/tvDate"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="?attr/textgrey"
                android:textSize="@dimen/_10sdp"
                android:gravity="start"
                android:layout_gravity="center"
                android:fontFamily="@font/poppins_regular"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                />

            <TextView
                android:layout_marginLeft="@dimen/_4sdp"
                android:id="@+id/tvmore"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/more"
                android:textColor="@color/primary"
                android:textSize="@dimen/_10sdp"
                android:gravity="center"
                android:layout_gravity="center"
                android:fontFamily="@font/poppins_medium"
                />



        </LinearLayout>


        <TextView
            android:paddingHorizontal="@dimen/_4sdp"
            android:visibility="gone"
            android:id="@+id/tvDescription"
            android:layout_toLeftOf="@+id/ivShare"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Trip to Kerala, looking for travel partner"
            android:textColor="?attr/myTextColor"
            android:textSize="@dimen/_12sdp"
            android:fontFamily="@font/poppins_semibold"
            />


        <!--        <RelativeLayout-->
        <!--            android:id="@+id/rlStatus"-->
        <!--            android:layout_marginTop="@dimen/_8sdp"-->
        <!--            android:background="@color/red"-->
        <!--            android:padding="@dimen/_5sdp"-->
        <!--            android:layout_width="match_parent"-->
        <!--            android:layout_height="wrap_content">-->

        <!--            <TextView-->
        <!--                android:id="@+id/tvStatus"-->
        <!--                android:layout_width="wrap_content"-->
        <!--                android:layout_height="wrap_content"-->
        <!--                android:text="Rejected"-->
        <!--                android:textColor="@color/white"-->
        <!--                android:textSize="@dimen/_12sdp"-->
        <!--                android:fontFamily="@font/poppins_semibold"-->
        <!--                android:layout_centerInParent="true"-->
        <!--                />-->


        <!--        </RelativeLayout>-->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/tvStatus"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/poppins_medium"
                android:text=""
                android:textAllCaps="false"
                android:textSize="@dimen/_12sdp"
                app:iconSize="@dimen/_12sdp"
                app:iconGravity="textStart"
                app:iconPadding="@dimen/_4sdp"
                app:cornerRadius="8dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/llDelete"
                android:layout_width="0dp"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/poppins_medium"
                android:paddingVertical="@dimen/_8sdp"
                app:backgroundTint="@null"
                android:backgroundTint="@color/white"
                android:text="Remove"
                app:strokeColor="@color/borderColor"
                app:strokeWidth="1dp"
                android:textAllCaps="false"
                android:textSize="@dimen/_12sdp"
                android:textColor="@color/black"
                app:icon="@drawable/delete_ic"
                app:iconTint="@color/primary"
                app:iconSize="@dimen/_12sdp"
                app:iconGravity="textStart"
                app:iconPadding="@dimen/_4sdp"
                app:cornerRadius="8dp"
                />


        </LinearLayout>
    </LinearLayout>


</com.google.android.material.card.MaterialCardView>