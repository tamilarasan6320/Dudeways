<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.ProfileViewActivity">

    <RelativeLayout
        android:id="@+id/rlToolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_160sdp">


        <RelativeLayout
            android:id="@+id/rl1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <ImageView
                android:id="@+id/ivCover"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_120sdp"
                android:scaleType="fitXY"
      />


            <ImageButton
            android:backgroundTint="?attr/iconColor"
                android:id="@+id/ivBack"
                android:layout_margin="@dimen/_10sdp"
                android:layout_width="@dimen/_24sdp"
                android:layout_height="@dimen/_18sdp"
                android:background="@drawable/arrow_left"
                />


            <ImageView
                android:id="@+id/ivCamera"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:background="@drawable/cam_ic"
                android:layout_alignParentRight="true"
                android:layout_margin="@dimen/_10sdp"
                />

        </RelativeLayout>




        <RelativeLayout
            android:id="@+id/rlProfile"
            android:layout_alignParentBottom="true"
            android:layout_width="@dimen/_70sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/civProfile"
                android:layout_width="@dimen/_70sdp"
                android:layout_height="@dimen/_70sdp"
                app:civ_border_width="2dp"
                app:civ_border_color="@color/primary"
                />

            <ImageView
                android:id="@+id/ivAddProfile"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/_45sdp"
                android:background="@drawable/add_profile_ic" />

        </RelativeLayout>








        <ImageView
                android:backgroundTint="?attr/iconColor"
            android:id="@+id/ivEdit"
            android:layout_marginRight="@dimen/_5sdp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:scaleType="fitXY"
            android:background="@drawable/edit_ic"
            android:layout_marginBottom="@dimen/_5sdp"
            />


    </RelativeLayout>



    <LinearLayout
        android:id="@+id/llProfileDetails"
        android:orientation="vertical"
        android:padding="@dimen/_10sdp"
        android:layout_below="@+id/rlToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



        <LinearLayout
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_gravity="center"
                android:gravity="center"
                android:id="@+id/tvName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="@dimen/_14sdp"
                android:fontFamily="@font/poppins_semibold"
                android:textColor="?attr/myTextColor"
                />


            <LinearLayout
                android:id="@+id/ivGenderColor"
                android:gravity="center"
                android:paddingVertical="@dimen/_2sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:paddingHorizontal="@dimen/_8sdp"
                android:orientation="horizontal"
                android:backgroundTint="@color/blue_200"
                android:background="@drawable/corners_bg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/ivGender"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_width="@dimen/_8sdp"
                    android:layout_height="@dimen/_8sdp"
                    android:scaleType="fitXY"
                    android:backgroundTint="@color/white"
                    />

                <TextView
                    android:id="@+id/ivAge"
                    android:gravity="center"
                    android:paddingTop="@dimen/_2sdp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/_4sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="@dimen/_8sdp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/poppins_regular"
                    />

            </LinearLayout>


        </LinearLayout>





        <TextView
            android:layout_marginTop="@dimen/_4sdp"
            android:id="@+id/tvUsername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="@dimen/_12sdp"
            android:fontFamily="@font/poppins_medium"
            android:textColor="?attr/textgrey"
            />









        <LinearLayout
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingTop="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Introduction"
                android:textSize="@dimen/_12sdp"
                android:fontFamily="@font/poppins_semibold"
                android:textColor="?attr/myTextColor"
                />

            <TextView
                android:id="@+id/tvIntroduction"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="@dimen/_10sdp"
                android:fontFamily="@font/poppins_regular"
                android:textColor="?attr/textgrey"
                />


        </LinearLayout>



        <LinearLayout
            android:paddingTop="@dimen/_10sdp"
            android:weightSum="2"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <LinearLayout
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Profession"
                    android:textSize="@dimen/_12sdp"
                    android:fontFamily="@font/poppins_semibold"
                    android:textColor="?attr/myTextColor"
                    />

                <TextView
                    android:id="@+id/tvProfessional"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="@dimen/_10sdp"
                    android:fontFamily="@font/poppins_regular"
                    android:textColor="?attr/textgrey"
                    />


            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Gender"
                    android:textSize="@dimen/_12sdp"
                    android:fontFamily="@font/poppins_semibold"
                    android:textColor="?attr/myTextColor"
                    />

                <TextView
                    android:id="@+id/tvGender"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="@dimen/_10sdp"
                    android:fontFamily="@font/poppins_regular"
                    android:textColor="?attr/textgrey"
                    />


            </LinearLayout>



        </LinearLayout>
        <LinearLayout
            android:paddingTop="@dimen/_10sdp"
            android:weightSum="2"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <LinearLayout
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="City"
                    android:textSize="@dimen/_12sdp"
                    android:fontFamily="@font/poppins_semibold"
                    android:textColor="?attr/myTextColor"
                    />

                <TextView
                    android:id="@+id/tvCity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="@dimen/_10sdp"
                    android:fontFamily="@font/poppins_regular"
                    android:textColor="?attr/textgrey"
                    />


            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="State"
                    android:textSize="@dimen/_12sdp"
                    android:fontFamily="@font/poppins_semibold"
                    android:textColor="?attr/myTextColor"
                    />

                <TextView
                    android:id="@+id/tvState"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="@dimen/_10sdp"
                    android:fontFamily="@font/poppins_regular"
                    android:textColor="?attr/textgrey"
                    />


            </LinearLayout>



        </LinearLayout>


    </LinearLayout>





    <androidx.core.widget.NestedScrollView
        android:layout_below="@id/llProfileDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">




    <LinearLayout
        android:id="@+id/llProfileOptions"
        android:layout_marginBottom="@dimen/_20sdp"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:padding="@dimen/_10sdp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



        <RelativeLayout
            android:id="@+id/rlMytrips"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <ImageView
                android:backgroundTint="?attr/iconColor"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:background="@drawable/my_trip_ic" />


            <TextView
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/_50sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="My Trips"
                android:textColor="?attr/myTextColor"
                android:textSize="@dimen/_12sdp"
                android:fontFamily="@font/poppins_medium"
                />

        </RelativeLayout>
          <Space
            android:layout_width="match_parent"
            android:layout_height="@dimen/_24sdp"/>
        <RelativeLayout
            android:id="@+id/rlSetting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <ImageView
                android:backgroundTint="?attr/iconColor"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:background="@drawable/my_trip_ic" />


            <TextView
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/_50sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Dark Mode"
                android:textColor="?attr/myTextColor"
                android:textSize="@dimen/_12sdp"
                android:fontFamily="@font/poppins_medium"
                />

        </RelativeLayout>
          <Space
            android:layout_width="match_parent"
            android:layout_height="@dimen/_24sdp"/>
        <RelativeLayout
            android:id="@+id/rlNotifications"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <ImageView
                android:backgroundTint="?attr/iconColor"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:background="@drawable/notication_ic"
                />


            <TextView
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/_50sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Manage Notifications"
                android:textColor="?attr/myTextColor"
                android:textSize="@dimen/_12sdp"
                android:fontFamily="@font/poppins_medium"
                />

        </RelativeLayout>
          <Space
            android:layout_width="match_parent"
            android:layout_height="@dimen/_24sdp"/>
        <RelativeLayout
            android:id="@+id/rlStorepoints"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <ImageView
                android:backgroundTint="?attr/iconColor"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:background="@drawable/card_ic"
                />


            <TextView
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/_50sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Store Points"
                android:textColor="?attr/myTextColor"
                android:textSize="@dimen/_12sdp"
                android:fontFamily="@font/poppins_medium"
                />

        </RelativeLayout>
          <Space
            android:layout_width="match_parent"
            android:layout_height="@dimen/_24sdp"/>
        <RelativeLayout
            android:id="@+id/rlTermscondition"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <ImageView
                android:backgroundTint="?attr/iconColor"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:background="@drawable/terms_ic"
                />


            <TextView
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/_50sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Terms and conditions"
                android:textColor="?attr/myTextColor"
                android:textSize="@dimen/_12sdp"
                android:fontFamily="@font/poppins_medium"
                />

        </RelativeLayout>
          <Space
            android:layout_width="match_parent"
            android:layout_height="@dimen/_24sdp"/>
        <RelativeLayout
            android:id="@+id/rlInviteFriends"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <ImageView
                android:backgroundTint="?attr/iconColor"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:background="@drawable/invite_friend_ic"
                />


            <TextView
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/_50sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Invite Friends"
                android:textColor="?attr/myTextColor"
                android:textSize="@dimen/_12sdp"
                android:fontFamily="@font/poppins_medium"
                />

        </RelativeLayout>
          <Space
            android:layout_width="match_parent"
            android:layout_height="@dimen/_24sdp"/>
        <RelativeLayout
            android:id="@+id/rlPrivacy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <ImageView
                android:backgroundTint="?attr/iconColor"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:background="@drawable/lock_ic"
                />


            <TextView
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/_50sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Privacy policy"
                android:textColor="?attr/myTextColor"
                android:textSize="@dimen/_12sdp"
                android:fontFamily="@font/poppins_medium"
                />

        </RelativeLayout>
          <Space
            android:layout_width="match_parent"
            android:layout_height="@dimen/_24sdp"/>
        <RelativeLayout
            android:id="@+id/rlVerificationBadge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <ImageView
                android:backgroundTint="?attr/iconColor"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:background="@drawable/verfy_ic"
                />


            <TextView
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/_50sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Verification Badge"
                android:textColor="?attr/myTextColor"
                android:textSize="@dimen/_12sdp"
                android:fontFamily="@font/poppins_medium"
                />

        </RelativeLayout>
          <Space
            android:layout_width="match_parent"
            android:layout_height="@dimen/_24sdp"/>
        <RelativeLayout
            android:id="@+id/rlDeactiveaccount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <ImageView
                android:backgroundTint="?attr/iconColor"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:background="@drawable/feedback_ic"
                />


            <TextView
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/_50sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Give Feedback"
                android:textColor="?attr/myTextColor"
                android:textSize="@dimen/_12sdp"
                android:fontFamily="@font/poppins_medium"
                />

        </RelativeLayout>
        <Space
            android:layout_width="match_parent"
            android:layout_height="@dimen/_24sdp"/>
        <RelativeLayout
            android:id="@+id/rlCustomerSupport"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <ImageView
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:background="@drawable/customer_suppor_ic"
                android:backgroundTint="?attr/iconColor" />


            <TextView
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/_50sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Customer Support"
                android:textColor="?attr/myTextColor"
                android:textSize="@dimen/_12sdp"
                android:fontFamily="@font/poppins_medium"
                />

        </RelativeLayout>
          <Space
            android:layout_width="match_parent"
            android:layout_height="@dimen/_24sdp"/>
        <RelativeLayout
            android:id="@+id/rlLogout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <ImageView
                android:backgroundTint="?attr/iconColor"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:background="@drawable/sign_out_ic"
                />


            <TextView
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/_50sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Logout"
                android:textColor="?attr/myTextColor"
                android:textSize="@dimen/_12sdp"
                android:fontFamily="@font/poppins_medium"
                />

        </RelativeLayout>




    </LinearLayout>


    </androidx.core.widget.NestedScrollView>

</RelativeLayout>