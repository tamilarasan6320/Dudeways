<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Outer background, white -->
    <item android:drawable="@android:color/white" />

    <!-- Inner shadow -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" />
            <corners
                android:topLeftRadius="@dimen/_10sdp"
                android:topRightRadius="@dimen/_10sdp"
                android:bottomLeftRadius="0dp"
                android:bottomRightRadius="0dp" />

        </shape>
    </item>

    <!-- Blurred rectangle for the shadow -->
    <item android:top="1dp" android:right="1dp" android:left="1dp" android:bottom="1dp">
        <shape android:shape="rectangle">
            <solid android:color="#60E8E6E6" />
            <corners android:radius="10dp" />
        </shape>
    </item>



</layer-list>
