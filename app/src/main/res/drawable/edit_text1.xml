<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:bottom="2dp"
        android:left="-3dp"
        android:right="-3dp"
        android:top="-4dp">
        <shape android:shape="rectangle">
            <stroke
                android:width="0.5dp"
                android:color="@android:color/black" />
            <solid android:color="#60E8E6E6" />
            <corners android:radius="5dp" />

            <stroke
                android:width="2dp"
                android:color="@color/primary"
                 />
            <padding
                android:bottom="5dp"
                android:left="5dp"
                android:right="5dp"
                android:top="5dp" />
        </shape>
    </item>



</layer-list>
