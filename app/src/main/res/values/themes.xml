<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base theme for light mode -->

    <!-- Base theme for light mode -->
    <style name="Theme.Paring" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimaryVariant">@color/primary</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Define text color for light mode -->
        <item name="android:textColor">@color/black</item>
        <item name="myTextColor">@color/black</item> <!-- Default text color -->
        <item name="iconColor">@color/black</item> <!-- Default text color -->
        <item name="textgrey">@color/text_grey</item>
        <item name="cardlightcolor">@color/primary_extra_light</item>
        <item name="cardbgcolor">@color/white</item>
        <item name="titleBG">@color/titleBG</item>
        <item name="radiobgcolor">@color/primary</item>
        <item name="MenuBG">#F3F3F3</item>
        <item name="textmenu">#4F5E7B</item>

    </style>

    <!-- Theme for dark mode -->
    <style name="Theme.Paring.Dark" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimaryVariant">@color/primary</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Define text color for dark mode -->
        <item name="android:textColor">@color/white</item>
        <item name="myTextColor">@color/white</item> <!-- Text color for dark mode -->
        <item name="iconColor">@color/text_grey_dark</item> <!-- Text color for dark mode -->
        <item name="textgrey">@color/text_grey_dark</item> <!-- Text color for dark mode -->
        <item name="cardlightcolor">@color/primary_light</item> <!-- Text color for dark mode -->
        <item name="cardbgcolor">@color/transparent</item> <!-- Text color for dark mode -->
        <item name="titleBG">#262626</item> <!-- Text color for dark mode -->
        <item name="radiobgcolor">@color/white</item> <!-- Text color for dark mode -->
        <item name="MenuBG">#262626</item> <!-- Text color for dark mode -->
        <item name="textmenu">#4F5E7B</item>

    </style>

    <style name="Theme.Paring.Fullscreen" parent="Theme.Paring">
        <item name="android:actionBarStyle">@style/Widget.Theme.Paring.ActionBar.Fullscreen</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="ThemeOverlay.Paring.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">@color/light_blue_600</item>
        <item name="fullscreenTextColor">@color/light_blue_A200</item>
    </style>


</resources>
