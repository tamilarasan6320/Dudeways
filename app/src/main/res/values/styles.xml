<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base theme for light mode -->
    <style name="Theme.Paring" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimaryVariant">@color/primary</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Define text color for light mode -->
        <item name="android:textColor">@color/black</item>
        <item name="myTextColor">@color/black</item> <!-- Default text color -->
        <item name="iconColor">@color/black</item> <!-- Default text color -->
        <item name="textgrey">@color/text_grey</item>

    </style>

    <!-- Theme for dark mode -->
    <style name="Theme.Paring.Dark" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimaryVariant">@color/primary</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Define text color for dark mode -->
        <item name="android:textColor">@color/white</item>
        <item name="myTextColor">@color/white</item> <!-- Text color for dark mode -->
        <item name="iconColor">@color/text_grey_dark</item> <!-- Text color for dark mode -->
        <item name="textgrey">@color/text_grey_dark</item> <!-- Text color for dark mode -->
    </style>

    <!-- Custom style for a button -->
    <style name="CustomButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:background">@drawable/custom_button_background</item>
        <item name="android:backgroundTint">@color/primary</item>
    </style>

    <!-- Custom style for calendar date -->
    <style name="CalendarDateTextAppearance">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- Custom style for calendar week day -->
    <style name="CalendarWeekDayTextAppearance">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- Custom style for calendar view week custom text -->
    <style name="CalenderViewWeekCustomText" parent="android:TextAppearance.DeviceDefault.Small">
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- Custom CalendarView style -->
    <style name="CalenderViewCustom" parent="Theme.AppCompat">
        <item name="colorControlActivated">@color/primary</item>
        <item name="android:textColorPrimary">@color/white</item>
    </style>

    <!-- Custom style for CalendarView date custom text -->
    <style name="CalenderViewDateCustomText" parent="Theme.AppCompat">
        <item name="android:textColor">@drawable/calender_date_selector</item>
    </style>

    <!-- Theme overlay for TextInputEditText Outlined style -->
    <style name="ThemeOverlay.AppTheme.TextInputEditText.Outlined" parent="">
        <item name="colorControlActivated">@color/primary</item>
    </style>

</resources>
