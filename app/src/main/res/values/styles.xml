<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CustomButtonStyle" parent="Widget.AppCompat.Button">
        <!-- Customize attributes here -->
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:background">@drawable/custom_button_background</item>
        <item name="android:backgroundTint">@color/primary</item>
    </style>



    <!-- Custom style for calendar date -->
    <style name="CalendarDateTextAppearance">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- Custom style for calendar week day -->
    <style name="CalendarWeekDayTextAppearance">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="CalenderViewWeekCustomText" parent="android:TextAppearance.DeviceDefault.Small">
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- Custom CalendarView style -->
    <style name="CalenderViewCustom" parent="Theme.AppCompat">
        <item name="colorControlActivated">@color/primary</item>
        <item name="android:textColorPrimary">@color/white</item>
    </style>


    <style name="CalenderViewDateCustomText" parent="Theme.AppCompat">
        <item name="android:textColor">@drawable/calender_date_selector</item>
    </style>



    <style name="ThemeOverlay.AppTheme.TextInputEditText.Outlined" parent="">
        <item name="colorControlActivated">@color/primary</item>
    </style>




</resources>